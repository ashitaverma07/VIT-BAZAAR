{
  "name": "backend",
  "version": "1.0.0",
  "description": "Managing the backend of college bazar",
  "engines": {
    "node": "18.18.2"
  },
  "main": "app.js",
  "scripts": {
    "test": "env-cmd -f config/test.env jest --runInBand",
    "start": "node index.js",
    "dev": "env-cmd -f config/dev.env nodemon index.ts",
    "ts-start": "env-cmd -f config/dev.env nodemon index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "prepare": "cd .. && husky install backend/.husky",
    "github-tests": "jest --runInBand"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
